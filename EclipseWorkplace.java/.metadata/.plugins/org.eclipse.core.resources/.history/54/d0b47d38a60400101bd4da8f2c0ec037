package introduction_to_java.firstprogram;

import java.util.Scanner;

public class ControlStatements {
	public static void main(String[] args) {
		/*
		 * if ,if else , else if and switch statement
		 * if (condition){
		 * }
		 * else{
		 * }
		 * if(condition){
		 * }
		 * else if (condition){
		 * }
		 * else if (condition){
		 * }
		 * else{
		 * }*/
		int a=30;
		int b=20;
		int c=50;
		
		if (a<b) {
		System.out.println("b is large");
		
		}
		else if(c>b) {
			System.out.println("c is greater than b");
			
		}
		else {
			System.out.println("a is large");
		}
		
		//swtich statement
		System.out.println("switch statement method 1 ");
		int day=6;
		switch(day) {
		case 1->System.out.println("Monday");
		case 2->System.out.println("Tuesday");
		case 3->System.out.println("Wednesday");
		case 4->System.out.println("Thursday");
		case 5->System.out.println("Friday");
		case 6->System.out.println("Saturday");
		case 7->System.out.println("Sunday");
		
		}
		System.out.println("switch statement method 2 ");
		int day1=6;
		switch(day1) {
		case 1:{System.out.println("Monday");
		break;
		}
		case 2:{System.out.println("Tuesday");
		break;
		}
		case 3:{System.out.println("Wednesday");
		break;
		}
		case 4:{System.out.println("Thursday");
		break;
		}
		case 5:{System.out.println("Friday");
		break;
		}
		case 6:{System.out.println("Saturday");
		break;
		}
		case 7:{System.out.println("Sunday");
		break;
		}
		}
		
		int Day2;
		System.out.println("enter a number between 1 to 7");
		Scanner sc=new Scanner(System.in);
		Day2=sc.nextInt();
		
		System.out.println("switch case using methos 1");
		switch(Day2) {
		case 1:{System.out.println("Monday");
		System.out.println("weeek days");
		
		break;
		}
		case 2:{System.out.println("Tuesday");
		System.out.println("weeek days");
		
		break;
		}
		case 3:{System.out.println("Wednesday");
		System.out.println("weeek days");
		break;
		}
		case 4:{System.out.println("Thursday");
		System.out.println("weeek days");
		break;
		}
		case 5:{System.out.println("Friday");
		System.out.println("weeek days");
		break;
		}
		case 6:{System.out.println("Saturday");
		System.out.println("weeek end");
		break;
		}
		case 7:{System.out.println("Sunday");
		System.out.println("weeek end");
		break;
		}
		default:
			
			System.out.println("invalid user input");
			
		}
	}
}


			
		
		
		
		
	
	
		
	


